function writeFile($filename, $str) {
        clearstatcache();
        $fp=@fopen($filename, 'wb');
        if($fp){
            fwrite($fp, $str . "\n");
            fclose($fp);
            echo "更新しました";
        }
        echo "更新出来ませんでした";
}

if(isset($_POST['form'])){
   writeFile('form.html', $_POST['form']);
}
